---
interface Props {
  date?: Date;
  time?: string;
}

const { date, time } = Astro.props;
---

{
  date && (
    <time datetime={date.toISOString()}>
      {date.toLocaleDateString("en-us", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })}
    </time>
  )
}
{date && time && ", "}
{time && <time datetime={time}>{time}</time>}
