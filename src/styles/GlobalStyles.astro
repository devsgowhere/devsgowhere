---

import "../styles/fontawesome/scss/fontawesome.scss";
import "../styles/fontawesome/scss/regular.scss";
import "../styles/fontawesome/scss/solid.scss";

---

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Audiowide&family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet">

<!-- Global styles -->
<style lang="scss" is:global>

	// 
	//
	// Reset styles
	//
	//
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	*::before,
	*::after {
		box-sizing: border-box;
	}

	//
	//
	// Colors
	//
	//

	//
	// Define grays from gray-1 to gray-8
	//

	$grays: (
		"1": #ededed,
		"2": #dfdfdf,
		"3": #bfbfbf,
		"4": #a0a0a0,
		"5": #808080,
		"6": #606060,
		"7": #404040,
		"8": #202020,
	);

	:root {
		@each $key, $value in $grays {
			--gray-#{$key}: #{$value};
		}
	}

	//
	// Theme colors
	//

	:root {
		
		--base-color: #eeeeee;

		--header-background-color: white;
		--header-link-color: black;
		--header-link-active-color: rgb(88, 26, 243);

		--card-background-color: white;
		--card-border-color: var(--gray-4);
		--card-shadow-color: var(--gray-3);
		--card-border-color-active: var(--gray-7);
		--card-shadow-color-active: var(--gray-4);

		--link-text-color: blue;

		--footer-text-color: inherit;

		--text-accent-color: rgb(88, 26, 243);

	}

	.theme-mellow-techno {

		--color-1: #0000cc;
		--color-2: #5239b7;
		--color-3: #9063a7;
		--color-4: #cd8e97;
		--color-5: #f6aa8c;

		--base-color: var(--color-3);

		--header-background-color: var(--color-1);
		--header-link-color: white;
		--header-link-active-color: var(--color-5);

		--card-border-color: var(--gray-7);
		--card-shadow-color: var(--color-2);
		--card-border-color-active: var(--gray-8);
		--card-shadow-color-active: var(--color-5);

		--footer-text-color: var(--color-5);

	}

	.theme-tech-blue-aquamarine {

		$color-1: #17072b;
		$color-2: #172d67;
		$color-3: #22ddd2;
		$color-4: #2e73ea;
		$color-5: #8c15e9;
		$color-6: #e42eea;

		--color-1: #{$color-1};
		--color-2: #{$color-2};
		--color-3: #{$color-3};
		--color-4: #{$color-4};
		--color-5: #{$color-5};
		--color-6: #{$color-6};

		--base-color: #{mix($color-3, white, 40%)};
		//--base-color: var(--color-3);

		--header-background-color: var(--color-1);
		--header-link-color: white;
		--header-link-active-color: var(--color-6);

		--card-border-color: var(--gray-7);
		--card-shadow-color: var(--color-2);
		--card-border-color-active: var(--gray-8);
		--card-shadow-color-active: var(--color-5);

		--link-text-color: var(--color-5);

		--footer-text-color: var(--color-4);

		--text-accent-color: var(--color-5);

	}

	body {
		background-color: var(--base-color);
	}

	//
	//
	// Typography
	//
	//
	:root {

		// body
		--font-family-body: "Space Grotesk", Arial, sans-serif;

		// headers
		--font-family-header: "Audiowide", Arial, sans-serif;

		// code
		--font-family-code: "Fira Code", monospace;
	}

	html {
		font-family: var(--font-family-body);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: var(--font-family-header);
	}

	.text-header {
		font-family: var(--font-family-header) !important;
	}

	.brand-name {
		font-family: var(--font-family-header) !important;
		font-weight: 400 !important;
	}

	h1, h2, h3, h4 {
		margin-bottom: .5em;
		font-weight: 400;
	}

	code {
		font-family: var(--font-family-code);
	}

	.text-code {
		font-family: var(--font-family-code) !important;
	}

	p {
		margin-bottom: 1.5em;
	}

	a {
		color: var(--link-text-color);
		text-decoration: underline;
	}

	// text colors from text-gray-1 to text-gray-7
	@each $key, $value in $grays {
		.text-gray-#{$key} {
			color: var(--gray-#{$key}) !important;
		}
	}

	.text-accent {
		color: var(--text-accent-color) !important;
	}

	// text sizes from text-2xs to text-3xl
	$text-sizes: (
		"2xs": 0.5rem,
		"xs": 0.75rem,
		"s": 0.875rem,
		"base": 1rem,
		"l": 1.125rem,
		"xl": 1.25rem,
		"2xl": 1.5rem,
		"3xl": 1.875rem,
	);

	@each $size, $value in $text-sizes {
		.text-#{$size} {
			font-size: $value !important;
		}
	}

	.text-bold {
		font-weight: 700 !important;
	}

	.text-italic {
		font-style: italic !important;
	}

	.text-underline {
		text-decoration: underline !important;
	}

	//
	//
	// Margins and paddings
	//
	//

	// Define spaces from 3xs to 4xl
	$spaces: (
		"0": 0,
		"3xs": 0.125rem,
		"2xs": 0.25rem,
		"xs": 0.5rem,
		"s": 0.75rem,
		"base": 1rem,
		"m": 1rem,
		"l": 1.5rem,
		"xl": 2rem,
		"2xl": 4rem,
		"3xl": 8rem,
		"4xl": 16rem
	);

	@each $space, $value in $spaces {

		.m-#{$space} {
			margin: $value !important;
		}
		.mt-#{$space} {
			margin-top: $value !important;
		}
		.mb-#{$space} {
			margin-bottom: $value !important;
		}
		.ml-#{$space} {
			margin-left: $value !important;
		}
		.mr-#{$space} {
			margin-right: $value !important;
		}
		.my-#{$space} {
			margin-top: $value !important;
			margin-bottom: $value !important;
		}
		.mx-#{$space} {
			margin-left: $value !important;
			margin-right: $value !important;
		}

		.p-#{$space} {
			padding: $value !important;
		}
		.pt-#{$space} {
			padding-top: $value !important;
		}
		.pb-#{$space} {
			padding-bottom: $value !important;
		}
		.pl-#{$space} {
			padding-left: $value !important;
		}
		.pr-#{$space} {
			padding-right: $value !important;
		}
		.py-#{$space} {
			padding-top: $value !important;
			padding-bottom: $value !important;
		}
		.px-#{$space} {
			padding-left: $value !important;
			padding-right: $value !important;
		}
	}

	//
	// 
	// Layout
	//
	//

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	//
	//
	// Component : Card
	//
	//

	.card {

		background-color: var(--card-background-color);
      	border-radius: 1rem;
      	overflow: hidden;

		border: 3px solid var(--card-border-color);
		box-shadow: 10px 10px 0 0 var(--card-shadow-color);
		&:hover {
			border-color: var(--card-border-color-active);
			box-shadow: 10px 10px 0 0 var(--card-shadow-color-active);
		}

		transition: all 150ms ease-in-out;

	}

	@media (max-width: 768px) {
		
		.card {
			
			width: 100%;
			max-width: 100%;
			
			border-radius: 0;
			border: none;
			box-shadow: none;
			&:hover {
				box-shadow: none;
			}

		}

	}

	//
	// 
	// Component : Tags
	//
	//

	.tag-list{

		list-style-type: none;
		display: inline-flex;
		gap: .25em;
		flex-wrap: wrap;
		padding: 0;

	}

	.tag {

		display: inline-block;
		
		background-color: rgb(222, 241, 254);
		color: rgb(0, 128, 255);

		border-radius: 2em;
		padding: .125em .5em;
		font-size: .875em;

	}

</style>
<!-- End: Global styles -->